---
export interface Props {
  icon: string;
  title: string;
  description: string;
  features: string[];
  price?: string;
}

const { icon, title, description, features, price } = Astro.props;
---

<div class="service-card card reveal">
  <div class="service-icon">
    <i class={icon}></i>
  </div>
  
  <div class="service-content">
    <h3 class="service-title">{title}</h3>
    <p class="service-description">{description}</p>
    
    <ul class="service-features">
      {features.map((feature) => (
        <li class="service-feature">
          <span class="feature-check">✓</span>
          {feature}
        </li>
      ))}
    </ul>
    
    {price && (
      <div class="service-price">
        <span class="price-label">Desde</span>
        <span class="price-amount">{price}</span>
      </div>
    )}
  </div>
  
  <div class="service-action">
    <a href="#contacto" class="btn btn-primary service-btn">
      Solicitar Cotización
    </a>
  </div>
</div>

<style>
  .service-card {
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
  }
  
  .service-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-6);
    background: linear-gradient(135deg, var(--color-accent), var(--color-success));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-3xl);
    color: white;
    position: relative;
    overflow: hidden;
  }
  
  .service-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-success), var(--color-accent));
    opacity: 0;
    transition: opacity var(--transition-normal);
  }
  
  .service-card:hover .service-icon::before {
    opacity: 1;
  }
  
  .service-icon i {
    position: relative;
    z-index: 1;
    transition: transform var(--transition-normal);
  }
  
  .service-card:hover .service-icon i {
    transform: scale(1.1) rotate(5deg);
  }
  
  .service-content {
    flex: 1;
    margin-bottom: var(--space-6);
  }
  
  .service-title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }
  
  .service-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-5);
  }
  
  .service-features {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: left;
    margin-bottom: var(--space-5);
  }
  
  .service-feature {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: 1.5;
  }
  
  .feature-check {
    color: var(--color-success);
    font-weight: bold;
    font-size: var(--text-base);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .service-price {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    margin-bottom: var(--space-5);
    position: relative;
    overflow: hidden;
  }
  
  .service-price::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-success));
  }
  
  .price-label {
    display: block;
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    margin-bottom: var(--space-1);
  }
  
  .price-amount {
    font-family: var(--font-primary);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-accent);
  }
  
  .service-action {
    margin-top: auto;
  }
  
  .service-btn {
    width: 100%;
    transition: all var(--transition-normal);
  }
  
  .service-card:hover .service-btn {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  /* Mobile styles */
  @media (max-width: 768px) {
    .service-icon {
      width: 60px;
      height: 60px;
      font-size: var(--text-2xl);
      margin-bottom: var(--space-4);
    }
    
    .service-title {
      font-size: var(--text-lg);
    }
    
    .service-features {
      margin-bottom: var(--space-4);
    }
    
    .service-feature {
      margin-bottom: var(--space-2);
    }
  }
</style>